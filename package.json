{
    "name": "restaurant-website",
    "version": "1.0.0",
    "description": "Restaurant website with admin panel",
    "main": "server/simple-server.js",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "server:simple": "node server/simple-server.js",
        "seed": "node server/seed.js",
        "client": "cd client && npm run dev",
        "build": "cd client && npm install && npm run build",
        "start": "node server/index.js",
        "deploy": "npm install && cd client && npm install && npm run build && cd .."
    },
    "keywords": [
        "restaurant",
        "admin"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^8.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}